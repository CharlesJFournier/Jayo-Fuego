<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menuwithtimersettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.productivityenhancer.Menuwithtimersettings">

    <EditText
        android:hint="@string/breaktime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/editText2" />

    <EditText
        android:hint="@string/repeatetime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/editText3" />

    <EditText
        android:hint="@string/longtime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/editText4" />

    <Button
        android:text="1"
        android:background="@drawable/roundbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button" />

    <Button
        android:text="2"
        android:background="@drawable/roundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:id="@+id/button2" />

    <Button
        android:text="3"
        android:background="@drawable/roundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:id="@+id/button3" />

    <Button
        android:text="4"
        android:background="@drawable/roundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button4" />

    <Button
        
        android:text="Like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/button6"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/button7"
        android:layout_above="@+id/editText"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/button8"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="@string/worktime"
        android:textStyle="bold|italic"
        android:background="@drawable/myborder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="time"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/editText"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Home"
        android:background="@drawable/buttonshape"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button7" />

    <Button
        android:text="Liked pattern :"
        android:background="#C4ED68"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:id="@+id/button5"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />
</RelativeLayout>
